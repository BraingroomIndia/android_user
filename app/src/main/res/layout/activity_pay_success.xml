<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.braingroom.user.utils.CommonUtils" />

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.PaySuccessViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/header_height_large"
            android:elevation="@dimen/header_height_large"
            android:foregroundGravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Braingroom"
                    android:textSize="40sp"
                    app:font='@{@string/robotoBold}' />

                <TextView
                    android:id="@+id/success_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_med"
                    android:gravity="center"
                    android:text="Successful Purchase"
                    android:textColor="@color/bottomNavSelectedGreen"
                    android:textSize="25sp"
                    app:font='@{@string/robotoBold}' />

                <TextView
                    android:id="@+id/transaction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/success_text"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="Date"
                    app:font='@{@string/robotoRegular}' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/success_text"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@{vm.time}"
                    app:font='@{@string/robotoRegular}' />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transaction_time"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="Name"
                    app:font='@{@string/robotoRegular}' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/transaction_time"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@{vm.name}"
                    app:font='@{@string/robotoRegular}' />


                <TextView
                    android:id="@+id/transaction_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="Transaction Number"
                    app:font='@{@string/robotoRegular}' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@{vm.transactionId}"
                    app:font='@{@string/robotoRegular}' />

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transaction_id"
                    android:layout_margin="@dimen/margin_small_neg"
                    android:layout_marginTop="@dimen/margin_large"
                    android:src="@drawable/bottom_line_drawable"
                    android:tint="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="Total Amount"
                    android:textSize="@dimen/text_size_large"
                    app:font='@{@string/robotoRegular}' />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_alignParentRight="true"
                    android:text="@{vm.totalAmount}"
                    android:textSize="@dimen/text_size_large"
                    app:font='@{@string/robotoRegular}' />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>