<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.ClassListViewModel" />

    </data>

    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.braingroom.user.view.activity.ClassListActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height_large"
                android:scrollbars="none"
                android:visibility="@{vm.segmentsVisibility ? View.VISIBLE : View.GONE}"
                app:layout_scrollFlags="scroll|enterAlways"
                bind:items="@{vm.segments}"
                bind:layout_vertical="@{false}"
                bind:view_provider="@{@layout/item_segments_text}">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_height"
                android:background="@color/colorTextGray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:onClick="@{vm.onViewChangeClicked}"
                    android:padding="@dimen/_6sdp"
                    android:src="@{ vm.tileView ?  @drawable/ic_format_list_bulleted_black_24dp : @drawable/ic_border_all_black_24dp }" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:onClick="@{vm.onSortClicked}"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_import_export_black_24dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:onClick="@{vm.onFilterClicked}"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_filter_list_black_24dp" />

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tile_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_small_neg"
            android:layout_marginLeft="@dimen/margin_small_neg"
            android:layout_marginRight="@dimen/margin_small_neg"
            android:visibility="@{vm.tileView ? View.VISIBLE : View.GONE}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            bind:divider_decoration='@{"space_divider"}'
            bind:space_length="@{@dimen/margin_med}"
            bind:items="@{vm.classes}"
            bind:layout_grid_vertical="@{true}"
            bind:span_count="@{2}"
            bind:view_provider="@{@layout/item_class_tile_listing}"
            tools:context="com.braingroom.user.view.activity.ClassListActivity" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/row_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{vm.tileView ? View.GONE : View.VISIBLE}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            bind:divider_decoration='@{"space_divider"}'
            bind:space_length="@{@dimen/margin_med}"
            bind:items="@{vm.classes}"
            bind:layout_vertical="@{true}"
            bind:view_provider="@{@layout/item_class_row_listing}"
            tools:context="com.braingroom.user.view.activity.ClassListActivity" />

    </android.support.design.widget.CoordinatorLayout>
</layout>
