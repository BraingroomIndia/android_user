<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.RowShimmerItemViewModel" />

    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="@dimen/padding_med">

        <!--<com.facebook.shimmer.ShimmerFrameLayout-->
        <!--android:id="@+id/shimmer_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_med">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/solid_shimmer_light_rounded_corner"
                android:paddingLeft="@dimen/padding_med" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_med">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:background="@drawable/solid_shimmer_rounded_corner" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/solid_shimmer_rounded_corner" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:layout_marginTop="@dimen/margin_med"
                    android:background="@drawable/solid_shimmer_rounded_corner" />

            </LinearLayout>
        </LinearLayout>
        <!--</com.facebook.shimmer.ShimmerFrameLayout>-->
    </android.support.v7.widget.CardView>
</layout>