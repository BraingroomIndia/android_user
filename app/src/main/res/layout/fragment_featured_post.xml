<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.braingroom.user.R" />

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.fragment.FeaturedPostItemViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.braingroom.user.view.activity.ClassDetailActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_4sdp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:background="@color/bottomNavSelectedGreen">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="start"
                                android:padding="@dimen/margin_med"
                                app:imageUrl="@{vm.userImage}"
                                app:placeHolder="@{R.drawable.avatar_male}"
                                tools:src="@drawable/avatar_male" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@id/profile_image"
                                android:layout_toRightOf="@id/profile_image"
                                android:lineSpacingMultiplier="1.2"
                                android:padding="@dimen/margin_med"
                                android:text='@{vm.userName +"\n" + vm.userCollegeName}'
                                android:textColor="@color/colorTextDark"
                                app:font='@{@string/robotoRegular}'
                                tools:text="Name \nCollege" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/bottom_line_drawable"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/margin_med"
                                android:text="@{vm.postTitle}"
                                android:textColor="@color/colorTextDark"
                                android:textSize="@dimen/text_size_large"
                                app:font='@{@string/robotoBold}'
                                tools:text="Post title" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="@{vm.postImage==null ? View.GONE : View.VISIBLE}">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="@{vm.postTitle}"
                                    android:padding="@dimen/margin_small"
                                    android:scaleType="centerCrop"
                                    app:imageUrl="@{vm.postImage}"
                                    tools:src="@drawable/empty_board" />

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:onClick="@{vm.playVideo}"
                                    android:src="@drawable/play_button"
                                    android:visibility="@{vm.postVideo==null ? View.GONE : View.VISIBLE}" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_med"
                                android:layout_marginTop="@dimen/margin_med">

                                <com.ms.square.android.expandabletextview.ExpandableTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="@dimen/margin_small"
                                    android:text="@{vm.postDescription}"
                                    android:textColor="@color/colorTextDark"
                                    android:visibility="@{vm.postImage==null ? View.VISIBLE : View.GONE}"
                                    expandableTextView:animDuration="200"
                                    expandableTextView:maxCollapsedLines="4"
                                    tools:text="@string/a1">

                                    <TextView
                                        android:id="@id/expandable_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:lineSpacingExtra="@dimen/_4sdp"
                                        android:textColor="@color/colorTextDark"
                                        app:font='@{@string/robotoRegular}'
                                        tools:text="@string/a1" />

                                    <ImageButton
                                        android:id="@id/expand_collapse"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end|bottom"
                                        android:background="@android:color/transparent"
                                        android:contentDescription="See more"
                                        android:padding="@dimen/_1sdp" />
                                </com.ms.square.android.expandabletextview.ExpandableTextView>


                                <com.ms.square.android.expandabletextview.ExpandableTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="@dimen/margin_small"
                                    android:text="@{vm.postDescription}"
                                    android:textColor="@color/colorTextDark"
                                    android:visibility="@{vm.postImage==null ? View.GONE : View.VISIBLE}"
                                    expandableTextView:animDuration="200"
                                    expandableTextView:maxCollapsedLines="2"
                                    tools:text="@string/a1">

                                    <TextView
                                        android:id="@id/expandable_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:lineSpacingExtra="@dimen/_4sdp"
                                        android:textColor="@color/colorTextDark"
                                        app:font='@{@string/robotoRegular}'
                                        tools:text="@string/a1" />

                                    <ImageButton
                                        android:id="@id/expand_collapse"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end|bottom"
                                        android:background="@android:color/transparent"
                                        android:contentDescription="See more"
                                        android:padding="@dimen/_1sdp" />
                                </com.ms.square.android.expandabletextview.ExpandableTextView>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


