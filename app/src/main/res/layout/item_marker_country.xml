<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.DataItemViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> vm.onClicked.accept(vm)}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingBottom="@dimen/padding_med"
            android:paddingTop="@dimen/padding_med"
            android:text="@{vm.s_1}"
            android:textColor="@color/materialBlue"
            android:textSize="@dimen/text_size_medium"
            app:font='@{@string/robotoRegular}' />
    </LinearLayout>
</layout>