<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <import type="android.view.View" />

        <variable
            name="visible"
            type="boolean" />
    </data>

    <!--<com.facebook.shimmer.ShimmerFrameLayout-->
    <!--android:id="@+id/shimmer_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@android:color/white"-->
    <!--android:visibility="@{visible ? View.VISIBLE : View.GONE}">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shimmerBackground"
            android:layout_marginBottom="@dimen/margin_large"
            android:paddingBottom="@dimen/margin_large"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorShimmerBlue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_med"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorShimmerBlue"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorShimmerBlue"
            android:layout_marginRight="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_large">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/colorShimmerGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/colorShimmerGray" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginRight="200dp"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/colorShimmerGray" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginRight="120dp"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/colorShimmerGray" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/colorShimmerGray" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginRight="200dp"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/colorShimmerGray" />

        </LinearLayout>
    </LinearLayout>
    <!--</com.facebook.shimmer.ShimmerFrameLayout>-->
</layout>