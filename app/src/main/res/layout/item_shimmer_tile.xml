<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.ShimmerItemViewModel" />

    </data>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="275dp">

            <TextView
                android:id="@+id/square"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/solid_shimmer_light_rounded_corner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_below="@id/square"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="@dimen/margin_med"
                    android:background="@drawable/solid_shimmer_rounded_corner" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/margin_med"
                    android:background="@drawable/solid_shimmer_rounded_corner" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:layout_marginTop="@dimen/margin_med"
                    android:background="@drawable/solid_shimmer_rounded_corner" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>