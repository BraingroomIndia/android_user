<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.LoginViewmodel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundGray"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="50dp"
            tools:context="com.braingroom.user.view.activity.LoginActivity">


            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:src="@drawable/braingroom_logo" />

            <LinearLayout
                android:id="@+id/login_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_icon"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <!--android:background="@drawable/solid_white_rounded_corner"-->


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:text="@={vm.email}" />
                <!--android:paddingLeft="15dp"-->

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cardview_shadow_start_color" />-->

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:text="@={vm.password}" />
                <!--android:paddingLeft="15dp"-->

            </LinearLayout>

            <TextView
                android:id="@+id/email_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="@{vm.onLoginClicked}"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/light_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{vm.onForgotPassClicked}"
                    android:text="Forgot password?"
                    android:textColor="@color/orange" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fb_sign_in_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_signin"
                android:layout_marginTop="@dimen/margin_med">

                <Button
                    android:id="@+id/fb_login_original"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_button"
                    android:drawableRight="@drawable/facebook_logo"
                    android:layout_gravity="right|center"
                    android:text="Sign in with"
                    android:paddingRight="100dp"
                    android:onClick="@{vm.onFbLoginClicked}"
                    android:textAllCaps="false"
                    android:paddingLeft="75dp"
                    android:textSize="15dp"/>
                <!--android:drawablePadding="50dp"-->

                <!--<com.facebook.login.widget.LoginButton
                    android:id="@+id/fb_login_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/fb_login_fake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{vm.onFbLoginClicked}"
                    android:src="@drawable/fb_login" />-->
            </FrameLayout>

            <FrameLayout
                android:id="@+id/google_sign_in_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fb_sign_in_container">

                <Button
                    android:id="@+id/google_login_fake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_button"
                    android:drawableRight="@drawable/google_logo"
                    android:paddingRight="100dp"
                    android:text="Sign in with"
                    android:gravity="center"
                    android:onClick="@{vm.onGoogleLoginClicked}"
                    android:textAllCaps="false"
                    android:paddingLeft="75dp"
                    android:textSize="15dp"/>

                <!--<com.google.android.gms.common.SignInButton
                    android:id="@+id/google_login_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/google_login_fake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{vm.onGoogleLoginClicked}"
                    android:src="@drawable/google_login" />-->
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:onClick="@{vm.onSignupClicked}"
                    android:text="@string/sign_up"
                    android:textColor="#565656" />
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:visibility="@{vm.isOTP ? View.VISIBLE: View.GONE}" />

    </RelativeLayout>


</layout>
