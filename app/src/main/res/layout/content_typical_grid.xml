<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.GridViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_med"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@{vm.title}"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_large"
            app:font='@{@string/robotoRegular}' />


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:items="@{vm.gridItems}"
            bind:layout_grid_vertical="@{true}"
            bind:span_count="@{2}"
            bind:view_provider="@{@layout/icon_text_cardview}" />

    </LinearLayout>
    <!--
    android:nestedScrollingEnabled="false"
     bind:divider_decoration='@{"space_divider"}'
        android:layout_marginBottom="@dimen/margin_small_neg"
        android:layout_marginLeft="@dimen/margin_small_neg"
        android:layout_marginRight="@dimen/margin_small_neg"
    -->

</layout>