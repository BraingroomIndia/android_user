<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.braingroom.user.utils.BindingUtils" />

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.ShowcaseClassListViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_large">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_large"
            android:text="@{vm.title}"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_large"
            app:font='@{@string/robotoRegular}' />


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/padding_large"
                bind:items="@{vm.items}"
                bind:layout_vertical="@{false}"
                bind:view_provider="@{@layout/item_class_tile}" />

    </LinearLayout>

</layout>