<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.braingroom.user.viewmodel.CheckoutViewModel" />
    </data>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_med"
            android:paddingRight="@dimen/padding_med"
            android:paddingTop="@dimen/padding_med">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{vm.classImage}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/margin_med"
                        android:layout_marginRight="@dimen/margin_med"
                        android:layout_marginTop="@dimen/margin_med"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:padding="@dimen/padding_med"
                        android:text="@{vm.classTopic}"
                        android:textColor="@color/colorTextDark"
                        android:textSize="@dimen/text_size_medium"
                        app:font='@{@string/robotoRegular}' />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/margin_med"
                        android:layout_marginRight="@dimen/margin_med"
                        android:layout_marginTop="@dimen/margin_med"
                        android:background="@drawable/top_line_drawable"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_med"
                        android:text="@{vm.classDate}"
                        android:textColor="@color/colorTextDark"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="@{vm.classDate == null ? View.GONE : View.VISIBLE}"
                        app:font='@{@string/robotoRegular}' />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                card_view:cardElevation="@dimen/elevation_small">

                <include
                    layout="@layout/item_list_dialog_opener"
                    android:visibility="@{vm.isLocation? View.VISIBLE : View.GONE}"
                    app:editable="@{true}"
                    app:vm="@{vm.locationsVm}" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                card_view:cardElevation="@dimen/elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_med">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_line_drawable"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="Choose levels"
                            android:textSize="@dimen/text_size_large"
                            app:font='@{@string/robotoBold}' />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:onClick="@{vm.onShowPriceDetailsClicked}"
                            android:text="Pricing info"
                            android:textColor="@color/materialBlue"
                            android:textSize="@dimen/text_size_medium"
                            android:visibility="@{vm.pricingTableList.size()==0 ? View.GONE : View.VISIBLE}"
                            app:font='@{@string/robotoBold}' />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/pricing_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_small"
                        android:background="@drawable/top_line_drawable"
                        android:gravity="right"
                        android:padding="@dimen/padding_small"
                        android:text='@{"Total amount : Rs. " + vm.totalAmount}'
                        android:textSize="@dimen/text_size_large"
                        app:font='@{@string/robotoRegular}' />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:visibility="gone"
                card_view:cardElevation="@dimen/elevation_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/padding_small"
                    android:gravity="center"
                    android:text='@{vm.appliedCouponCode == null ? "Apply a Coupon Code" : "Coupon Code : " + vm.appliedPromoCode}'
                    android:textColor="@color/materialBlue"
                    android:textSize="@dimen/text_size_large"
                    android:visibility="@{vm.couponCode == null ? View.VISIBLE : View.GONE}"
                    app:font='@{@string/robotoRegular}' />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="@{vm.couponCode == null ?  View.GONE: View.VISIBLE}">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="@={vm.couponCode}" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Apply"
                        android:textColor="@color/materialBlue"
                        android:textSize="@dimen/text_size_large"
                        app:font='@{@string/robotoRegular}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:visibility="@{vm.isGift ?  View.GONE : View.VISIBLE}"
                card_view:cardElevation="@dimen/elevation_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/padding_small"
                    android:gravity="center"
                    android:onClick="@{vm.onOpenPromoCode}"
                    android:text='@{vm.appliedPromoCode == null ? "Apply a Promo Code" : "Promo Code : " + vm.appliedPromoCode}'
                    android:textColor="@color/materialBlue"
                    android:textSize="@dimen/text_size_large"
                    android:visibility="@{vm.promoCode == null || vm.appliedPromoCode != null ? View.VISIBLE : View.GONE}"
                    app:font='@{@string/robotoRegular}' />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_med"
                    android:paddingRight="@dimen/padding_med"
                    android:paddingTop="@dimen/padding_small"
                    android:visibility="@{vm.promoCode == null || vm.appliedPromoCode != null ?  View.GONE : View.VISIBLE}">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="@={vm.promoCode}" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:onClick="@{vm.onApplyPromoCode}"
                        android:text="Apply"
                        android:textColor="@color/materialBlue"
                        android:textSize="@dimen/text_size_large"
                        app:font='@{@string/robotoRegular}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/materialGreen"
                android:gravity="center"
                android:onClick="@{vm.onProceedClicked}"
                android:text='@{vm.totalAmountAfterPromo==0 ? "Select Items to Proceed" : "Pay Rs."+vm.totalAmountAfterPromo}'
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                app:font='@{@string/robotoBold}' />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>